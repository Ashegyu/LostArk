<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <ControlTemplate
        x:Key="ButtonTemplate"
        TargetType="{x:Type Button}">
        <Border
            Name="Border"
            CornerRadius="2"
            BorderThickness="1"
            Width="{Binding Width}"
            Height="{Binding Height}"
            VerticalAlignment="Center"
            HorizontalAlignment="Center"
            TextBlock.FontSize="17"
            TextBlock.Foreground="White"
            TextBlock.FontWeight="Bold">
            <Border.Background>
                <LinearGradientBrush
                    EndPoint="0.5,1"
                    StartPoint="0.5,0">
                    <GradientStop Color="#FFFF1E56"
                        Offset="1" />
                    <GradientStop Color="#FFFF1E56"
                        Offset="0" />
                </LinearGradientBrush>
            </Border.Background>
            <Border.BorderBrush>
                <LinearGradientBrush
                    EndPoint="0.5,1"
                    StartPoint="0.5,0">
                    <LinearGradientBrush.RelativeTransform>
                        <TransformGroup>
                            <ScaleTransform
                                CenterY="0.5"
                                CenterX="0.5" />
                            <SkewTransform
                                CenterX="0.5"
                                CenterY="0.5"
                                AngleX="1"
                                AngleY="1" />
                            <RotateTransform
                                Angle="-43"
                                CenterX="0.5"
                                CenterY="0.5" />
                            <TranslateTransform />
                        </TransformGroup>
                    </LinearGradientBrush.RelativeTransform>
                    <GradientStop Color="#FFFF1E56"
                        Offset="0.1" />
                    <GradientStop Color="#FFFF1E56"
                        Offset="0.677" />
                </LinearGradientBrush>
            </Border.BorderBrush>
            <ContentPresenter
                RecognizesAccessKey="True"
                Margin="{TemplateBinding Padding}"></ContentPresenter>
        </Border>
        <ControlTemplate.Triggers>
            <Trigger
                Property="IsMouseOver"
                Value="True">
                <Setter
                    TargetName="Border"
                    Property="Background">
                    <Setter.Value>
                        <LinearGradientBrush
                            EndPoint="0.5,1"
                            StartPoint="0.5,0">
                            <GradientStop Color="#FFFFAC41"
                                Offset="1" />
                            <GradientStop Color="#FFFFAC41"
                                Offset="0" />
                        </LinearGradientBrush>
                    </Setter.Value>
                </Setter>
                <Setter
                    TargetName="Border"
                    Property="BorderBrush">
                    <Setter.Value>
                        <LinearGradientBrush
                            EndPoint="0.5,1"
                            StartPoint="0.5,0">
                            <LinearGradientBrush.RelativeTransform>
                                <TransformGroup>
                                    <ScaleTransform
                                        CenterY="0.5"
                                        CenterX="0.5" />
                                    <SkewTransform
                                        CenterX="0.5"
                                        CenterY="0.5"
                                        AngleX="1"
                                        AngleY="1" />
                                    <RotateTransform
                                        Angle="-43"
                                        CenterX="0.5"
                                        CenterY="0.5" />
                                    <TranslateTransform />
                                </TransformGroup>
                            </LinearGradientBrush.RelativeTransform>
                            <GradientStop Color="#FFFFAC41"
                                Offset="0.1" />
                            <GradientStop Color="#FFFFAC41"
                                Offset="0.677" />
                        </LinearGradientBrush>
                    </Setter.Value>
                </Setter>
                <Setter
                    TargetName="Border"
                    Property="TextBlock.Foreground"
                    Value="White"></Setter>
            </Trigger>
            <Trigger
                Property="IsPressed"
                Value="True">
                <Setter
                    TargetName="Border"
                    Property="Background">
                    <Setter.Value>
                        <LinearGradientBrush
                            EndPoint="0.5,1"
                            StartPoint="0.5,0">
                            <GradientStop Color="#FFFFAC41"
                                Offset="1" />
                            <GradientStop Color="#FFA25D04"
                                          Offset="0" />
                        </LinearGradientBrush>
                    </Setter.Value>
                </Setter>
                <Setter
                    TargetName="Border"
                    Property="BorderBrush">
                    <Setter.Value>
                        <LinearGradientBrush
                            EndPoint="0.5,1"
                            StartPoint="0.5,0">
                            <LinearGradientBrush.RelativeTransform>
                                <TransformGroup>
                                    <ScaleTransform
                                        CenterY="0.5"
                                        CenterX="0.5" />
                                    <SkewTransform
                                        CenterX="0.5"
                                        CenterY="0.5"
                                        AngleX="1"
                                        AngleY="1" />
                                    <RotateTransform
                                        Angle="-43"
                                        CenterX="0.5"
                                        CenterY="0.5" />
                                    <TranslateTransform />
                                </TransformGroup>
                            </LinearGradientBrush.RelativeTransform>
                            <GradientStop Color="#FFA25D04"
                                Offset="0.093" />
                            <GradientStop Color="#FFFFAC41"
                                Offset="0.677" />
                        </LinearGradientBrush>
                    </Setter.Value>
                </Setter>
                <Setter
                    TargetName="Border"
                    Property="TextBlock.Foreground"
                        Value="White"></Setter>

            </Trigger>

            <Trigger
                Property="IsEnabled"
                Value="False">
                <Setter
                    TargetName="Border"
                    Property="Background">
                    <Setter.Value>
                        <LinearGradientBrush
                            EndPoint="0.5,1"
                            StartPoint="0.5,0">
                            <GradientStop
                                Color="#FFE4E3E3"
                                Offset="1" />
                            <GradientStop
                                Color="#FFF1F0F0"
                                Offset="0" />
                        </LinearGradientBrush>
                    </Setter.Value>
                </Setter>
                <Setter
                    TargetName="Border"
                    Property="BorderThickness"
                    Value="0" />

                <Setter
                    TargetName="Border"
                    Property="TextBlock.Foreground"
                    Value="Gray"></Setter>

            </Trigger>
        </ControlTemplate.Triggers>
    </ControlTemplate>
    <Style
        TargetType="{x:Type Button}">
        <Setter
            Property="VerticalContentAlignment"
            Value="Center"></Setter>
        <Setter
            Property="Control.Template"
            Value="{StaticResource ButtonTemplate}"></Setter>

    </Style>

</ResourceDictionary>